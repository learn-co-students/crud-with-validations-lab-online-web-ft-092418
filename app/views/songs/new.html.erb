<h1>Create a new Song</h1>

<div class="error_messages">
    <% if @song.errors.any? %>
        <p>There were some errors:</p>
        <% @song.errors.full_messages.each do |m| %>
            <li><%= m %></li>
        <% end %>
    <% end %>
</div>

<%= form_for @song do |f| %>
    <%= f.text_field :title %>
    <%= f.check_box :released %>
    <%= f.text_field :release_year %>
    <%= f.text_field :artist_name %>
    <%= f.text_field :genre %>
    <%= f.submit "Create"%>
<% end %>